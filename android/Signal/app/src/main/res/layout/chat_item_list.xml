<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_home_cl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/backgroundColor"
        android:paddingBottom="4dp">
        
        <ImageView
            android:src="@drawable/basic_profile"
            android:id="@+id/chat_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />
        
        <TextView
            android:id="@+id/chat_item_title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="xx 님과의 채팅창입니다."
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/chat_item_img" />

        <TextView
            android:id="@+id/content"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="aaaaaaaaa"
            app:layout_constraintTop_toBottomOf="@+id/chat_item_title"
            app:layout_constraintStart_toEndOf="@+id/chat_item_img"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/Time"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="15:00"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Alarm"
            android:background="@drawable/capsule_background"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="12"
            android:visibility="gone"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toBottomOf="@+id/Time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>

        <View
            android:background="#FF49454F"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingTop="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>