<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Signal" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="floatingActionButtonStyle">@style/RoundFloatingActionButton</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="android:fontFamily">@font/bm</item>
        <item name="android:windowBackground">#F7F7F7</item>
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
    </style>

    <style name="Theme.Signal" parent="Base.Theme.Signal" />

    <!-- Custom Chip style -->
    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeColor">@color/purple</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="fontFamily">@font/bm</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CustomChip</item>
        <item name="android:textColor">@color/chip_text_selector</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/gangwon_bold</item>
    </style>

    <!-- Round FAB style -->
    <style name="ShapeAppearanceOverlay.CustomChip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35dp</item>
    </style>

    <style name="RoundFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabRoundShape</item>
        <item name="strokeColor">@color/mint</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="FabRoundShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/purple</item>
    </style>

    <style name="CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bm</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/bm</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
